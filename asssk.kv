MDScreen:
    name : "ask"
    MDFloatLayout:
        md_bg_color:1,1,1,1
        MDIconButton:
            icon : "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color:rgba(26,24,58,255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDLabel:
            text: "You are a customer or seller?"
            
            font_size: "20sp"
            pos_hint: {"center_x": .45,"center_y": .85}
            halign: "center"
            color: rgba(0,0,59,255)

        MDLabel:
            text: "Select and Login to continue shopping!"
            
            font_size: "14sp"
            size_hint_x:.85
            pos_hint: {"center_x": .4, "center_y": .79}
            halign: "center"
            color: rgba(135,133,193,255)


        Button:
            text:"LOGIN AS SELLER"
            size_hint: .66,.065
            pos_hint:{"center_x" :.5 , "center_y": .28}
            background_color: 0,0,0,0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current ="loginf"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos 
                    radius: [5]

        Button:
            text:"LOGIN AS CUSTOMER"
            size_hint: .66,.065
            pos_hint:{"center_x" :.5 , "center_y": .18}
            background_color: 0,0,0,0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current ="login"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos 
                    radius: [5]