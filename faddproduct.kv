MDScreen:
    name: "faddproduct"

    MDFloatLayout:
        # FARMAZON Title at the Top
        MDLabel:
            text: "FARMAZON"
            font_size: "20sp"
            pos_hint: {"center_x": .5, "center_y": .95}  # Centered horizontally
            halign: "center"
            color: rgba(0, 0, 59, 255)

        MDLabel:
            text: "Let's get your business started in 3 steps"
            font_size: "14sp"
            pos_hint: {"center_x": .5, "center_y": .90}  # Centered horizontally
            halign: "center"
            color: rgba(135, 133, 193, 255)

        # Upper Panel with Steps
        BoxLayout:
            size_hint_y: None
            height: "40dp"
            pos_hint: {"center_x": .5, "center_y": .85}
            spacing: "5dp"

            # Step 1
            MDBoxLayout:
                orientation: 'vertical'
                MDFlatButton:
                    text: "1"
                    font_size: "18sp"
                    halign: "center"
                    color: rgba(0, 0, 255, 255)
                MDLabel:
                    text: "Add Product"
                    font_size: "14sp"
                    halign: "center"
                    color: rgba(0, 0, 255, 255)

            # Step 2
            MDBoxLayout:
                orientation: 'vertical'
                MDFlatButton:
                    text: "2"
                    font_size: "18sp"
                    halign: "center"
                    color: rgba(192, 192, 192, 255)
                    on_release:
                        root.manager.current = "faddproduct"
                        root.manager.transition.direction = "left"
                MDLabel:
                    text: "Product Details"
                    font_size: "14sp"
                    halign: "center"
                    color: rgba(192, 192, 192, 255)

            # Step 3
            MDBoxLayout:
                orientation: 'vertical'
                MDFlatButton:
                    text: "3"
                    font_size: "18sp"
                    halign: "center"
                    color: rgba(192, 192, 192, 255)
                MDLabel:
                    text: "Get first order"
                    font_size: "14sp"
                    halign: "center"
                    color: rgba(192, 192, 192, 255)

        # Scrollable Product input fields
        ScrollView:
            pos_hint: {"center_x": .5, "center_y": .46}  # Centered horizontally, positioned lower
            size_hint: 1, 0.67  # Takes up 60% of the vertical space
            do_scroll_x: False

            MDBoxLayout:
                orientation: 'vertical'
                spacing: 10
                padding: 15
                size_hint_y: None
                height: self.minimum_height

                # Product name
                MDTextField:
                    id: product_name
                    hint_text: "Product Name"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(60)

                # Product price
                MDTextField:
                    id: product_price
                    hint_text: "Product Price"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(60)

                # Product description
                MDTextField:
                    id: product_description
                    multiline: True
                    hint_text: "Product Description"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(70)

                # Product category
                MDTextField:
                    id: product_category
                    hint_text: "Product Category"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(60)

                # Product image
                MDTextField:
                    id: product_image
                    hint_text: "Product Image URL"
                    mode: "rectangle"
                    size_hint_y: None
                    height: dp(60)

                # Add product button
                MDRaisedButton:
                    text: "Add Product"
                    size_hint_y: None
                    height: dp(50)
                    on_press:
                        app.add_to_product(product_name,product_price,product_description,product_category,product_image)
                        app.generate_card()
                        #app.added_to_inventory()
                        root.manager.transition.direction = "right"
                        root.manager.current = "cart_layout"

                # Status label
                MDLabel:
                    id: status_label
                    text: ""
                    font_size: 18
                    halign: 'center'

        #navvvvvvv
        MDBoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: [0, 0, 0, 20]
            spacing: 5
            md_bg_color: .9, .9, .9, 1  # Light gray background color

            # Home Button
            MDBoxLayout:
                orientation: 'vertical'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'home'
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.primary_color
                    on_release:
                        root.manager.transition.direction = "right"
                        root.manager.current = "homef"
                MDLabel:
                    text: 'Home'
                    valign: "center"
                    theme_text_color: 'Custom'
                    text_color: app.theme_cls.primary_color
                    halign: "center"

            # Notification Button
            MDBoxLayout:
                orientation: 'vertical'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'warehouse'
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "inventory"
                MDLabel:
                    text: 'Inventory'
                    valign: "center"
                    halign: "center"

            # Favorite Button
            MDBoxLayout:
                orientation: 'vertical'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'store'
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "orders"
                MDLabel:
                    text: 'Orders'
                    valign: "center"
                    halign: "center"

            # Profile Button
            MDBoxLayout:
                orientation: 'vertical'
                MDIconButton:
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    icon: 'account'
                    on_release:
                        root.manager.transition.direction = "left"
                        root.manager.current = "accountf"
                MDLabel:
                    text: 'Profile'
                    valign: "center"
                    halign: "center"
