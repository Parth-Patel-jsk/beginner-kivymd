MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDLabel:
            text: "F A R M A Z O N"
            
            font_size: "23sp"
            pos_hint: {"center_y": .78}
            halign: "center"
            color: rgba(34,34,34,255)

        MDLabel:
            text: "Best place for farmers to sell their products!"
            
            font_size: "13sp"
            size_hint_x:.85
            pos_hint: {"center_x": .5, "center_y": .72}
            halign: "center"
            color: rgba(127,127,127,255)
        Button:
            text:"LOGIN"
            size_hint: .66,.065
            pos_hint:{"center_x" :.5 , "center_y": .18}
            background_color: 0,0,0,0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current ="ask"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos 
                    radius: [5]

        Button:
            text:"SIGNUP"
            size_hint: .66,.065
            pos_hint:{"center_x" :.5 , "center_y": .09}
            background_color: 0,0,0,0
            color: rgba(52,0,231,255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current ="asks"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x,self.y, self.width, self.height, 5,5,5,5,100
                